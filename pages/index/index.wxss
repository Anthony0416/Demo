/**index.wxss**/
/*==============导航条===============*/
.index_nav {
  width: 100%;
  height: 60rpx;
  border-top: 2rpx solid #eee;
  position: fixed;
  z-index: 10;
  background: white;
}
/*文字效果*/
.nav_text {
  display: inline-block;
  font-size: 26rpx;
  line-height: 50rpx;
  width: 9%;
  margin: 5rpx 12%;
  text-align: center;
  color: #999;
}
/*点击效果*/
.choosed {
  border-bottom: 5rpx solid #999;
}
/*===============index内容=================*/
.index_content {
  padding-top: 60rpx;
}
/*轮播图*/
.index_swiper {
  height: 400rpx;
}
.swiper_image {
  width: 750rpx;
  height: 400rpx;
}